<div class="comment" id="<%= "comment-" << comment.id.to_s %>">
  <%= link_to gravatar_for(comment.user, Settings.user.gravatar.size_40), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content"><%= comment.content %></span>
  <span class="timestamp">
    <%= t ".posted" %> <%= time_ago_in_words comment.created_at %>
  </span>
  <% if user_signed_in? %>
    <% if comment.user.is_user? current_user or current_user.is_admin? %>
    <div class="dropdown delete">
      <button class="btn dropdown-toggle btn-dropdown" type="button" data-toggle="dropdown">
        <span class="caret"></span></button>
        <ul class="dropdown-menu dropdown-menu-right">
          <li>
            <%= link_to t(".edit"), edit_comment_path(comment.id) %>
          </li>
          <li>
            <%= link_to t(".delete"), comment, method: :delete,
            data: {confirm: t(".you_sure")}%>
          </li>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>
