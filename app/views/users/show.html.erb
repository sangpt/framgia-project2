<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-3">
    <section class="user-info">
      <%= gravatar_for @user, 80 %>
      <div><h1><%= @user.name %></h1></div>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3><%= t ".posts" %> (<%= @user.posts.size %>)</h3>
      <ol class="posts" id="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>
